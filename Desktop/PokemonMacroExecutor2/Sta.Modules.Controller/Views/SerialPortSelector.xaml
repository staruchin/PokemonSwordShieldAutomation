<UserControl x:Class="Sta.Modules.Controller.Views.SerialPortSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ComboBox VerticalContentAlignment="Center" ItemsSource="{Binding PortNames}" SelectedItem="{Binding SelectedPortName.Value}" SelectedIndex="{Binding SelectedPortNameIndex.Value}"/>
        <TextBlock Grid.Column="1" Text="{Binding ConnectionStatus.Value}" VerticalAlignment="Center" Margin="10,0"/>
    </Grid>
</UserControl>
