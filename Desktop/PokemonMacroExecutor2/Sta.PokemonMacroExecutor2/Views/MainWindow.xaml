<Window x:Class="Sta.PokemonMacroExecutor2.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="900" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="360"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <ContentControl prism:RegionManager.RegionName="ImageViewerArea"/>
        <ContentControl Grid.Row="1" prism:RegionManager.RegionName="ControllerArea"/>
        <ContentControl Grid.Column="1" Grid.RowSpan="2" prism:RegionManager.RegionName="MacroSelectorArea"/>
    </Grid>
</Window>
